generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement()) @map("Id_user")
  name      String    @db.VarChar(150)
  firstname String    @db.VarChar(150)
  mail      String    @unique @db.VarChar(100)
  password  String    @db.VarChar(150)
  phone     String?   @db.VarChar(50)
  address   String    @db.VarChar(200)
  carts     Cart[]

  @@map("user_")
}

model Product {
  id          Int       @id @default(autoincrement()) @map("Id_product")
  name        String    @db.VarChar(150)
  price       Decimal   @db.Decimal(15, 2)
  image       String?   @db.VarChar(255)
  category    String    @db.VarChar(100)
  description String?   @db.Text
  stock       Int
  weigth      Decimal?  @db.Decimal(15, 2)
  height      Decimal?  @db.Decimal(15, 2)
  material    String?   @db.VarChar(100)
  brand       String?   @db.VarChar(50)
  carts       Cart[]

  @@map("product")
}

model Cart {
  id        Int      @id @default(autoincrement()) @map("Id_cart")
  userId    Int      @map("Id_user")
  productId Int      @map("Id_product")
  quantity  Int      @default(0)
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([userId, productId])  // ← Garde l'unicité mais sans en faire la clé primaire
  @@map("cart")
}
